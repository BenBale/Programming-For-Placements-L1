#include <iostream>
#include <queue>
#include <algorithm>
using namespace std;

int main() {
	
// your code goes here
int n, temp;
queue<int> sample;
cin>>n;
for(int i=0;i<n;i++)
{
	while(cin>>temp)
	 sample.push(temp);
}
sample.front()+=sample.back();
cout<<sample.front()<<endl;
cout<<sample.back()<<endl;
sample.pop();
cout<<sample.size()<<endl;
	return 0;
	
}
